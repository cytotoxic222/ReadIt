<% if current_admin %>
	<p>
		Admin Actions:
		<%= link_to "Edit", edit_book_path(@book) %> |
		<%= link_to "Delete", book_path(@book), :method => :delete, :confirm => "Are you sure you want to delete #{@book.title}?" %>
	</p>
<% end %>

<% title @book.title %>  
  
<h3><%=h "by: " + @book.author %></h3>
<p><%= @book.description %></p> 

<% if @reviews %>
	<h3>Reviews</h3>

	<% for review in @reviews do %>
		<p><em><%=h(review.author) %></em> <%= "Rating: " + review.rating.to_s + "/5" %></p>
		<p><%=h review.text %></p>
	<% end %>
<% end %>

<h3>Post Your Review!</h3>
<%= render "form" %>
