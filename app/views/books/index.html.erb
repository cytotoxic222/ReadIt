<% title "My Books" %>

<% for book in @books do %>
	<h2><%=link_to(h(book.title), book_path(book)) %></h2>
	<%= image_tag book.cover_image.url(:medium), :width => "25%" %>
	<h3><%=h "by: " + book.author %></h3>
	<p><%= book.description %></p>
<% end %>

<% if current_admin %>
	<p>
		Admin actions: <%= link_to "Add New Book", new_book_path %>
	</p>
<% end %>